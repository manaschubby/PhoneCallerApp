<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstApp.MainPage">

    <VerticalStackLayout
        Spacing="10"
        Padding="10">
        <Label
            Text="Enter a Phone Number"
            FontSize="20"
        />
        <Entry
            x:Name="PhoneNumberText"
            Text="1-555-NETMAUI"
        />
        <Button
            Text="Translate"
            Clicked="OnTranslate"
        />
        <Button x:Name="CallButton"
            Text="Call"
            IsEnabled="false"
            Clicked="OnCall"
        />
    </VerticalStackLayout>
        

</ContentPage>

